<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>
        <link href="../../content/kendo/kendo.common.min.css" rel="stylesheet" type="text/css" />
        <link href="../../content/kendo/kendo.bootstrap.min.css" rel="stylesheet" type="text/css" id="ken"/>
        <link href="../../content/screen.css" rel="stylesheet" type="text/css" />
        <link href="../../content/main-bootstrap.css" rel="stylesheet" type="text/css" id="my" />
        <link href="../../content/override.css" rel="stylesheet" type="text/css" />
        <script src="../../scripts/jquery.min.js" type="text/javascript"></script>
        <script src="../../scripts/kendo.all.min.js" type="text/javascript"></script>
        <script src="../../scripts/cultures/@ViewContext.HttpContext.GetGlobalResourceObject("texte", "CultureKendoFile")" type="text/javascript"></script>
        <script src="../../scripts/messages/@ViewContext.HttpContext.GetGlobalResourceObject("texte", "MessageKendoFile")" type="text/javascript"></script>
        <script type="text/javascript">
            kendo.culture("@ViewContext.HttpContext.GetGlobalResourceObject("texte", "CultureKendo")");
        </script>
        <script src="~/Scripts/uti.js" type="text/javascript"></script>
        <meta name="description" content="Verein" />
</head>
<body>
    <div id="vertical">
        <div>
            @{
                Html.RenderAction("Header", "Main");
            }
        </div>
        <div>
            @RenderBody()
        </div>
        <div>
            &nbsp;
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            $("#styles").kendoDropDownList({
                change: function(e) {
                    var value = this.text();
                    document.getElementById("ken").href = "../../content/kendo/kendo." + value + ".min.css";
                    document.getElementById("my").href = "../../content/main-" + value + ".css";
                }
            });
        });

        $("#vertical").kendoSplitter({
            orientation: "vertical",
            panes: [
                { collapsible: false, resizable: false, size: "40px" },
                { collapsible: false },
                { collapsible: false, resizable: false, size: "25px" }
            ]
        });

        $("#horizontal").kendoSplitter({
            panes: [
                { collapsible: true, size: "200px" },
                { collapsible: false }
            ]
        });

        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-69866253-1', 'auto');
        ga('send', 'pageview');
    </script>
</body>
</html>
